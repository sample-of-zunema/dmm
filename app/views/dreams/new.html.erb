<div class="container">
  
  <% if @dream.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @dream.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-2">
      <h2>夢の投稿</h2>
    </div>
  </div>

  <!--新規投稿フォーム-->
  <div class="row">
  <%= form_with model:@dream, url:'/dreams', local:true do |f| %>
    <h4>この夢をみた日</h4>
    <%= f.datetime_field :start_time %>
    <h4>その夢で感じた感情</h4>
      <ul>
        <li><label><%= f.radio_button :emotion, "楽しい", :checked => true %>楽しい</label></li>
        <li><label><%= f.radio_button :emotion, "嫌気" %>嫌気</label></li>
        <li><label><%= f.radio_button :emotion, "悲しい" %>悲しい</label></li>
        <li><label><%= f.radio_button :emotion, "恐い" %>恐い</label></li>
        <li><label><%= f.radio_button :emotion, "怒り" %>怒り</label></li>
      </ul>
    <h4>夢のタイトル</h4>
    <%= f.text_field :title %>
    <h4>夢の内容</h4>
    <%= f.text_area :body %>
    <%= f.submit "投稿" %>
  <% end %>
  </div>

</div>