<div class="comments">
  <p>コメント件数：<%= dream.comments.count %></p>
  <% dream.comments.each do |comment| %>
    <div id="delete_<%= comment.id %>">
      <%= comment.user.name %>
      <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
      <% if comment.user == current_user %>
      <div class="comment-delete">
        <%= link_to "削除", dream_comment_path(comment.dream, comment), method: :delete, remote: true %>
      </div>
     </div>
    <% end %>
  <% end %>

</div>