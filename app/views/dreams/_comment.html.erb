<div class="comments">
  <p>コメント件数：<%= dream.comments.count %></p>
  <% dream.comments.each do |comment| %>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    <% if comment.user == current_user %>
    <div class="comment-delete">
      <%= link_to "削除", dream_comment_path(comment.dream, comment), method: :delete, remote: true %>
    </div>
    <% end %>
  <% end %>

  <%= form_with model:[dream, comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>