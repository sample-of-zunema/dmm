 <div class="container">

  <!--夢の詳細情報-->
  <div class="row">
    <div class="col-10">
      <h2>夢の詳細</h2>
      <table class="table">
        <thead>
          <tr>
            <th>ニックネーム</th>
            <th>投稿した日</th>
            <th>夢を見た日</th>
            <th>夢で感じた感情</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @user.name %></td>
            <td><%= @dream.created_at %></td>
            <td><%= @dream.day %></td>
            <td><%= @dream.emotion %></td>
            <td><%= link_to "編集", edit_dream_path, class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "削除", dream_path(@dream), method: :delete, class: "btn btn-sm btn-danger" %></td>
          </tr>
          <tr>
            <td><%= @dream.title %></td>
            <td><%= @dream.body %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-10">
      <!--コメント入力フォーム-->
      <%= render 'dreams/comment', dream: @dream, comment: @comment %>
    </div>
  </div>

</div>