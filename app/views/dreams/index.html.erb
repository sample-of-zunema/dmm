<div class="container">

  <div class="row">
    <div class="col-10">
      <h2>投稿一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>ニックネーム</th>
            <th>投稿した日</th>
            <th>夢を見た日</th>
            <th>夢で感じた感情</th>
          </tr>
        </thead>
        <tbody>
        <% @dreams.each do |dream| %>
          <tr>
            <td>
              <%= link_to dream_path(dream.id) do %>
                <%= dream.user.name %>
              <% end %>
            </td>
            <td><%= dream.created_at %></td>
            <td><%= dream.day %></td>
            <td><%= dream.emotion %></td>
          </tr>
          <tr>
            <td><%= dream.title %></td>
          </tr>
          <tr>
            <td><%= dream.body %></td>
            <td>コメント◯件</td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>