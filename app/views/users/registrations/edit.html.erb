<div class="container">

  <div class="row">
    <div class="col-10 mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <!--編集失敗時のエラー表示-->
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <label>プロフィール画像</label>
        <%= f.file_field :image, id: :user_image %>
      </div><br />

      <div class="field">
        <label>ニックネーム</label>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div><br />

      <div class="field">
        <label>メールアドレス</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div><br />

      <div class="field">
        <label>新しいパスワード（変更しない場合は空欄で大丈夫です）</label>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div><br />

      <div class="field">
        <label>パスワードの確認</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div><br />

      <div class="field">
        <label>現在のパスワード</label>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div><br />

      <div class="actions">
        <%= f.submit "編集内容を確定する" %>
      </div>
    <% end %>
    </div>
  </div>

  <div class="row">
    <!--登録情報の削除ボタン-->
    <div class="col-10 mx-auto">
      <%= link_to 'アカウントを削除する', users_withdraw_path, method: :patch, class: "btn btn-sm btn-danger" %>
    </div>
  </div>

  <div class="row">
    <div class="col-10 mx-auto">
      <label><%= link_to "マイページへ戻る", :back %></label>
    </div>
  </div>

</div>