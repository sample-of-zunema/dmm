<div class="container">

  <div class="row login-top">
    <div class="col-2 mx-auto text-center">
      <h2>ログイン</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row login">
      <div class="col-2 mx-auto text-center">
        <div class="field">
          <h6>ニックネーム</h6>
          <%= f.text_field :name %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-2  mx-auto text-center">
        <div class="field">
          <h6>パスワード</h6>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-2  mx-auto text-center check-box">
        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-2  mx-auto text-center">
        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      </div>
    </div>

  <% end %>

  <div class="row login-bottom">
    <div class="col-3  mx-auto text-center align-center">
      <div class="new-user">
        <%= link_to "新規会員登録はまだですか？", new_user_registration_path %>
      </div>
    </div>
  </div>

</div>