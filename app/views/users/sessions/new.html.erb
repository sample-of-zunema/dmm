<div class="container">

  <div class="row">
    <h2>ログイン</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
      <div class="field">
        <h6>ニックネーム</h6>
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row">
      <div class="field">
        <h6>パスワード</h6>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <div class="row">
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    </div>

    <div class="row">
      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <%= link_to "新規会員登録はまだですか？", new_user_registration_path %>
  </div>

</div>