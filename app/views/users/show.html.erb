<div class="container">

  <div class="row align-items-center text-center">
    <div class="col-4">
      <h3><%= @user.name %>の夢日記</h3>
    </div>
    <!--ユーザーが投稿者なら編集ボタンを表示-->
    <% if @user == current_user %>
    <div class="col-3">
      <div class="user-show">
        <%= link_to "夢の新しい投稿", new_dream_path, class: "btn btn-lg btn-primary" %>
      </div>
    </div>
    <div class="col-2">
      <%= link_to '登録内容編集', edit_user_registration_path, method: :get, class: "btn btn-lg btn-success" %>
    </div>
    <% end %>
  </div>

  <!--シンプルカレンダー-->
  <div class="calendar">
  <%= month_calendar events: @dreams do |date, dreams| %>
    <%= date.day %>
    <!--投稿とその日付を紐付けて表示-->
    <% dreams.each do |dream| %>
      <div>「<%= link_to dream.title, dream %>」</div>
    <% end %>
  <% end %>
  </div>

</div>
