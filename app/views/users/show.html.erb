<div class="container">

  <div class="row">
      <h3><%= @user.name %>の夢日記</h3>
  </div>

  <div class="row">
    <%= image_tag @user.image.thumb.to_s, format: 'jpeg', size: "50x50", fallback: "no_image.jpg" %>
  </div>

  <%= month_calendar events: @dreams do |date, dreams| %>
    <%= date.day %>
    <% dreams.each do |dream| %>
      <div>
        「 <%= link_to dream.title, dream %> 」
      </div>
    <% end %>
  <% end %>

  <div class="row">
    <% if @user == current_user %>
    <div class="col-2">
      <%= link_to '登録内容編集', edit_user_registration_path, method: :get, class: "btn btn-sm btn-success" %>
    </div>
    <% end %>
  </div>

</div>