<div class="container">
  
  <div class="row inquiry-top">
    <div class="col-3 mx-auto text-center">
      <h2>お問い合わせ</h2>
    </div>
  </div>

  <!--問い合わせ確認フォーム-->
  <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
  <div class="row inquiry-top">
    <div class="col-3 mx-auto text-center">
      <label>名前</label>
        <%= f.hidden_field :name %>
        <div class="inquiry-field"><%= @inquiry.name %></div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-3 mx-auto text-center">
      <label>メールアドレス</label>
        <%= f.hidden_field :email %>
        <div class="inquiry-field"><%= @inquiry.email %></div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-3 mx-auto text-center">
      <label>お問い合わせ内容</label>
        <%= f.hidden_field :message %>
        <div class="inquiry-field"><%= simple_format(@inquiry.message) %></div>
    </div>
  </div>
  
  <div class="row inquiry-bottom">
    <div class="col-3 mx-auto text-center">
      <%= f.submit '送信', class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
  
  <% end %>

</div>