<!DOCTYPE html>
<html>
  <head>
    <title>DreamSharing</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <nav class="navbar navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="#"><%= image_tag 'dreamsharing.png', size: "50x50" %></a>
        <ul class="navbar-nav">
        <% if signed_in? %>
          <%= render 'layouts/logind_header' %>
        <% else %>
          <%= render 'layouts/notlogind_header' %>
        <% end %>
        </ul>
      </div>
    </nav>

    <div class="container">
      <%= notice %>
      <%= alert %>
      <%= yield %>
    </div>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>Â© 2021 zunema Inc. ALL Rights Reserved.</p>
          </div>
        </div>
      </div>
    </footer>
      
  </body>
</html>
