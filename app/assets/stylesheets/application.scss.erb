@import "bootstrap";
@import 'font-awesome-sprockets';
@import 'font-awesome';

body {
  font-size: 1.3rem;
  background-color: #F8F8FF;
}

.navbar container span {
  color: white;
}

.navbar {
  background-image: linear-gradient(15deg, #1C00E0 0%, #9DA3B0 100%);
  margin-bottom: 0;
}

.nav-item {
  display: inline-block;
  padding: 0.2em 0.7em;
  margin-right: 3px;
  text-decoration: none;
  background: white;
  border-left: solid 6px #5E17EB;
  color: #5E17EB;
  font-weight: bold;
  border-radius: 50px;
  opacity: 0.9;
}

.nav-item a {
  color: #5E17EB;
}

.notice-alert {
  margin-left: 10%;
}

.image {
  background-image: image-url("<%= asset_path('00630fb620da63270adc0220fa72118d_m.jpg') %>");
  background-attachment: fixed;
  background-size:cover;
}

.pagination li a {
  border: none;
  color: #696969;
}

.pagination .active a {
  background: #AAAAAA;
}

.pagination li a:hover {
  border-radius: 15px;
}

.dream-top {
  padding: 20px;
  background: white;
  color: #5E17EB;
  font-weight: bold;
  border-radius: 50px;
  opacity: 0.9;
}

.contact {
  padding: 30px
}

.post {
  padding: 20px;
  background: white;
  color: #5E17EB;
  font-weight: bold;
  border-radius: 50px;
}

h6 {
  background: white;
  font-weight: bold;
  opacity: 0.9;
}

.login-top {
  padding-top: 50px;
}

.login {
  padding-top: 60px;
}

.check-box {
  border-radius: 50px;
  background: white;
  opacity: 0.9;
}

.new-user {
  padding: 5px;
  margin: 30px;
  border-radius: 50px;
  background: white;
  opacity: 0.9;
}

.login-bottom {
  padding-bottom: 70px;
}

.new-top {
  padding-top: 30px;
}

.submit {
  padding-bottom: 30px;
}

label {
  padding: 3px 5px;
  border-radius: 5px;
  background: white;
}

.border-bottom, .dream-contents {
  background: white;
}

.show-bottom {
  padding-bottom: 80px;
}

.calendar {
  background: white;
}

.withdraw-top {
  padding-top: 100px;
}

.withdraw-middle {
  padding: 40px;
}

.withdraw-middle-p {
  background: white;
  opacity: 0.9;
}

.withdraw-bottom {
  padding-bottom: 80px;
}

.user-new {
  padding-top: 50px;
}

.user-new-bottom {
  padding-bottom: 50px;
}

.about-contents {
  padding: 20px;
  background: white;
  color: #5E17EB;
  font-weight: bold;
  border-radius: 50px;
  opacity: 0.9;
}

.about-bottom {
  padding-top: 50px;
  padding-bottom: 150px;
}